<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Select Package:"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <RadioButton
            android:id="@+id/package1"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:onClick="checkButton"
            android:text="CLASS A WASH"
            android:textAlignment="textStart"
            android:textColor="#747d8c"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/package2"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layoutDirection="rtl"
            android:onClick="checkButton"
            android:text="CLASS B WASH"
            android:textAlignment="textStart"
            android:textColor="#747d8c"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/package3"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layoutDirection="rtl"
            android:onClick="checkButton"
            android:text="CLASS C WASH"
            android:textAlignment="textStart"
            android:textColor="#747d8c"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="380dp"
        android:layout_height="63dp"
        android:background="#747d8c"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>